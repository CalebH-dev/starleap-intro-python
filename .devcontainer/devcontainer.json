{
    "name": "Python Class Environment",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "postCreateCommand": "pip install pytest",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python"
        ],
        "settings": {
          "python.defaultInterpreterPath": "/usr/local/bin/python",
          "python.linting.enabled": true
        }
      }
    }
  }